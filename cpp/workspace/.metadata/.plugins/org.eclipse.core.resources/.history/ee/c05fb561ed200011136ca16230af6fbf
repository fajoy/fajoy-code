void initSc(){


		try {
			const char *parse_str1 = "h1=%[^&]&p1=%d&f1=%[^&]";
			const char *parse_str2 = "h2=%[^&]&p2=%d&f2=%[^&]";
			const char *parse_str3 = "h3=%[^&]&p3=%d&f3=%[^&]";
			const char *parse_str4 = "h4=%[^&]&p4=%d&f4=%[^&]";
			const char *parse_str5 = "h5=%[^&]&p5=%d&f5=%[^&]";
			//sc[0].parse(query, parse_str1);

			sc[1].parse(query, parse_str2);
			sc[2].parse(query, parse_str3);
			sc[3].parse(query, parse_str4);
			sc[4].parse(query, parse_str5);
		} catch (...) {
			cout << "parse error!";
		}
}

int main(int argc, char* argv[], char *envp[]) {
close(0);
   fcntl(1, F_SETFL, O_NONBLOCK);
	printf("Content-type: text/html\n\n");
	initSc();
	begin_html();
	end_html();
	for(int i='a';i<'z';i++){
		for(int j=0;j<5;j++){
			char msg[]="a";
			msg[0]=i;
			sc[j].js(j,&msg[0]);
			fflush(stdout);
			usleep(10000);
		}
	}

	//sc[0].show();

	return 0;
}
