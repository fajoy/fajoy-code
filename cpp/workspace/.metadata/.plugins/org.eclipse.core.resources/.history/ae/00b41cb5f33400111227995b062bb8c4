#include <stdlib.h>
#include <iostream>
#include <stdio.h>
#include <string.h>
#include <netdb.h>
#include <netinet/in.h>
using namespace std;

int main() {
	struct hostent *server = (struct hostent *) gethostbyname("ubu.fajoy.co.cc");
	int ip=0;
	if(server){
		while(*server->h_aliase)
			printf("alias:%s\n",*server->h_aliases++);

		while(*server->h_addr_list)
					printf("addr :%d\n",*server->h_aliases++);
	}

	return 0;
}
