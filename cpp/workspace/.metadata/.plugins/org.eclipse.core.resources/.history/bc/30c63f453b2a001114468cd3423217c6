#include <stdio.h>
#include <time.h>
#include <iostream>
using namespace std;


int main() {

 	 time_t seconds;
	 seconds = time (NULL);
	 printf ("%ld hours since January 1, 1970", seconds/3600);
	//
	 cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
