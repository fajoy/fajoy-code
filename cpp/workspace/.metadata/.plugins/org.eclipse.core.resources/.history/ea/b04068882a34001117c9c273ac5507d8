			 if(client.hasRecvData){
			 proxy.setSendData(client.recv_buffer, client.recv_len);
			 gettimeofday(&timeout,NULL);
			 timeout.tv_sec+=timeout_len;
			 //proxy.sendData();
			 //printf("a2");
			 //fflush(stdout);
			 }
			 } else {
			 proxy.sendData();
			 }
			 */
			//}else if(FD_ISSET(proxy.socket_fd,&rfds)){
			/*
