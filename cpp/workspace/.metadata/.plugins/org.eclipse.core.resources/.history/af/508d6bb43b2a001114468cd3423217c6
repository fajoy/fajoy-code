#include <stdio.h>
#include <time.h>
#include <iostream>
using namespace std;


int main() {

 	 time_t t;
	 t = time(NULL);
	 while(1){

		 if(t!=time(NULL)){
			 t=time(NULL);
			 cout <<t<<endl;
			 usleep(100000);
		 }
	 }

	return 0;
}
