#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

using namespace std;

class SerCon {
public:
	char host[255];
	int port;
	char filename[255];
	SerCon(void);
	void parse(char *, const char *);
	void show(void);
};

SerCon::SerCon(void) {
	memset(host, 0, sizeof(host));
	memset(filename, 0, sizeof(filename));
	port = 0;
}
void SerCon::parse(char *query, const char *s) {

	char sport[5];
	sscanf(query, s, host, sport, filename);

	printf("pares=%s", s);
	port = atoi(sport);
}
void SerCon::show(void) {
	printf("h=%s,p=%d,f=%s<br />", host, port, filename);
}

