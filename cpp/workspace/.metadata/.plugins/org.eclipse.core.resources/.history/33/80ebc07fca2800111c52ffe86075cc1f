class Request {
public:
	Request(){
		Variables["SERVER_ADDR"]="";
		Variables["REMOTE_ADDR"]="";
		Variables["SERVER_PROTOCOL"]="";
		Variables["PATH"]="";
		Variables["REQUEST_URI"]="";
		Variables["DOCUMENT_ROOT"]="";
		Variables["HTTP_HOST"]="";
	}
	map<string, string> Variables;
	//string REQUEST_URI;
	string& REQUEST_URI() {
		return Variables["REQUEST_URI"];
	}

	string& Page(){
		string str=Variables["REQUEST_URI"];
		size_t found;
		found=str.find_last_of("/\\");
		_path=str.substr(0,found);
		_page=str.substr(found+1);
		return _page;
	}
	bool isCgi(){
		string str=Page();
		int pos= str.substr(str.length()-4,".cgi");
	}
	void setvar(){

	}
private:
	string _page;
	string _path;


};
